<h2>Welcome to JAKT!!</h2>

<% if @errors %>
  <p><%=@errors %> </p>
<% end %>


<%= form_for @user do |f| %>
  <%= f.label :email %><br/>
  <%= f.text_field :email %><br/>

  <%= f.label "Select Your Gender" %><br/>
  <%= f.select :gender, options_for_select(['male', 'female']) %><br/>

  <%= f.label "Choose a password" %><br/>
  <%= f.password_field :password %><br/>

  <%= f.label "Confirm a password" %><br/>
  <%= f.password_field :password_confirmation %><br/>

  <%= f.submit 'Create Account', url: users_path(@user) %>

<% end %>
